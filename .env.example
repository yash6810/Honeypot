# ============================================================
# Honeypot Agent Configuration Template
# ============================================================
# 
# INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values below
# 3. NEVER commit .env to Git (it contains secrets!)
#
# ============================================================

# ------------------------------------------------------------
# AI Provider Configuration
# ------------------------------------------------------------

# Which AI provider to use: "gemini" or "groq"
# Recommendation: Use "gemini" (most reliable free tier)
AI_PROVIDER=gemini

# Google Gemini API Key (FREE - No credit card required)
# Get from: https://aistudio.google.com/app/apikey
# Leave empty if not using Gemini
GEMINI_API_KEY=

# Groq API Key (FREE - Backup option)
# Get from: https://console.groq.com
# Leave empty if not using Groq
GROQ_API_KEY=

# ------------------------------------------------------------
# API Security
# ------------------------------------------------------------

# API Secret Key - CHANGE THIS!
# This is what GUVI will use to authenticate requests
# Generate a strong random string:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-STRING

# ------------------------------------------------------------
# GUVI Integration
# ------------------------------------------------------------

# The callback endpoint where we send final results
# DO NOT CHANGE unless GUVI provides different URL
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult

# ------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------

# Environment: "development" or "production"
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ------------------------------------------------------------
# Agent Behavior Configuration
# ------------------------------------------------------------

# Maximum conversation turns before auto-ending
MAX_CONVERSATION_TURNS=20

# Minimum intelligence items before allowing conversation end
# (e.g., need at least 2 pieces like 1 UPI ID + 1 phone number)
MIN_INTELLIGENCE_THRESHOLD=2

# How many turns without new intelligence before ending
STALE_CONVERSATION_THRESHOLD=5

# ------------------------------------------------------------
# API Performance Settings
# ------------------------------------------------------------

# API response timeout in seconds
API_TIMEOUT=30

# Maximum requests per minute (rate limiting)
MAX_REQUESTS_PER_MINUTE=60

# Enable response caching (true/false)
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=300

# ------------------------------------------------------------
# Development/Testing Settings
# ------------------------------------------------------------

# Enable test mode (uses mock responses, no real AI calls)
TEST_MODE=false

# Enable detailed request/response logging
VERBOSE_LOGGING=false

# ------------------------------------------------------------
# Optional: Database (if you want to persist sessions)
# ------------------------------------------------------------

# SQLite database file path
# DATABASE_URL=sqlite:///./honeypot.db

# PostgreSQL connection (for production)
# DATABASE_URL=postgresql://user:password@localhost/honeypot_db